extends layout.pug

block content

	#galleryCont(ng-controller='imgCtrl'
	class='container-fluid text-center')
		div(id="myModal" class="modal")
			div(class='row buttonCloseRow')
				button(class='btn col-xs-10' ng-click='setBackground()') Set as background image
				span(class="close col-xs-2" 
					onclick="document.getElementById('myModal').style.display='none'"
				) &times;

			img(class="modal-content" id="modalImg")
			div(id="caption" class='col-xs-6') 
				h1 {{ imageName }}

		div(class='imgDiv' ng-repeat='img in imgs')
			img(
				ng-src='{{img.name}}'
				class='gallImg'
				ng-mouseover='imgOver()'
				ng-mouseleave='imgLeave()'
				ng-click='imgClick($event)'
				ng-class='{ "imgOver": img.switch == true }'
				)